---
import Layout from '../layouts/Layout.astro';
import Icon from '../components/Icon.astro';
import SocialIcon from '../components/SocialIcon.astro';
import AnimatedIcon from '../components/AnimatedIcon.astro';
import GlassShape from '../components/GlassShape.astro';
---

<Layout title="Vision → Function">
    <!-- FLOATING SOCIAL -->
    <div class="social-float">
        <span class="follow-text">FOLLOW US</span>
        <a href="https://instagram.com/fikanovatech" target="_blank" class="social-float-icon" title="Instagram">
            <SocialIcon name="instagram" size={18} />
        </a>
        <a href="https://linkedin.com/company/fikanova" target="_blank" class="social-float-icon" title="LinkedIn">
            <SocialIcon name="linkedin" size={18} />
        </a>
        <a href="https://x.com/FikanovaTech" target="_blank" class="social-float-icon" title="X">
            <SocialIcon name="x-twitter" size={18} />
        </a>
    </div>

    <!-- Hero Section -->
    <section class="hero">
        <!-- Mobile Image Background (hidden on desktop) -->
        <div class="hero-image-bg" style="background-image: url('https://images.unsplash.com/photo-1451187580459-43490279c0fa?w=1200&q=80');"></div>
        
        <!-- Video Background (hidden on mobile) -->
        <div class="hero-video-container">
            <video autoplay muted loop playsinline class="hero-video">
                <source src="https://cdn.pixabay.com/video/2017/12/20/13495-248644905_large.mp4" type="video/mp4" />
            </video>
            <div class="hero-overlay"></div>
        </div>
        
        <div class="container">
            <div class="hero-badge">
                <span class="badge-dot"></span>
                Pre-launch — Building the Future
            </div>
            <h1>
                <span class="gradient-text">Vision</span> → Function
            </h1>
            <p class="hero-subtitle">
                Engineering ideas into functioning AI systems.
            </p>
            <div class="cta-buttons">
                <a href="/contact" class="btn btn-primary">
                    Get Started
                    <Icon name="arrow-right" size={18} />
                </a>
                <a href="/portfolio" class="btn btn-secondary">
                    View Our Work
                </a>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services" id="services">
        <div class="container">
            <div class="section-header scroll-reveal">
                <h2>Our Solutions</h2>
                <p>Comprehensive services tailored to transform your business</p>
            </div>
            <div class="services-grid">
                <div class="service-card scroll-reveal">
                    <AnimatedIcon type="code" size={48} class="service-icon-animated" />
                    <h3>Development</h3>
                    <p>Web development, mobile apps, and custom software solutions built with modern technologies.</p>
                    <a href="/services" class="btn btn-secondary" style="margin-top: 16px;">
                        View Services <Icon name="arrow-right" size={16} />
                    </a>
                </div>
                <div class="service-card scroll-reveal">
                    <AnimatedIcon type="chart" size={48} class="service-icon-animated" />
                    <h3>Marketing</h3>
                    <p>SEO optimization, social media marketing, and content strategy to grow your brand online.</p>
                    <a href="/services" class="btn btn-secondary" style="margin-top: 16px;">
                        View Services <Icon name="arrow-right" size={16} />
                    </a>
                </div>
                <div class="service-card scroll-reveal">
                    <AnimatedIcon type="ai" size={48} class="service-icon-animated" />
                    <h3>AI & Technology</h3>
                    <p>Chatbot integration, AI automation, and tech consulting to modernize your business.</p>
                    <a href="/services" class="btn btn-secondary" style="margin-top: 16px;">
                        View Services <Icon name="arrow-right" size={16} />
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats" id="impact">
        <div class="container">
            <div class="section-header scroll-reveal">
                <h2>Our Impact</h2>
                <p>Measuring success through outcomes and client satisfaction</p>
            </div>
            <div class="stats-grid">
                <div class="stat-item scroll-reveal">
                    <img src="/assets/icons/project-completed.png" alt="Projects" class="stat-icon-img" />
                    <h3>10+</h3>
                    <p>Projects Completed</p>
                </div>
                <div class="stat-item scroll-reveal">
                    <AnimatedIcon type="users" size={40} class="stat-icon-animated" />
                    <h3>8+</h3>
                    <p>Happy Clients</p>
                </div>
                <div class="stat-item scroll-reveal">
                    <AnimatedIcon type="target" size={40} class="stat-icon-animated" />
                    <h3>2025</h3>
                    <p>Year Founded</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Portfolio Section -->
    <section class="portfolio" id="portfolio">
        <div class="container">
            <div class="section-header scroll-reveal">
                <h2>Our Portfolio</h2>
                <p>Explore our completed and ongoing projects</p>
            </div>

            <div class="portfolio-tabs">
                <button class="tab-btn active" onclick="switchTab('completed')">
                    Completed Projects
                </button>
                <button class="tab-btn" onclick="switchTab('ongoing')">
                    Ongoing Projects
                </button>
            </div>

            <!-- Completed Projects -->
            <div class="portfolio-tab-content portfolio-grid active" id="completed-tab">
                <div class="portfolio-card scroll-reveal">
                    <span class="status-badge completed">Completed</span>
                    <img src="https://images.unsplash.com/photo-1560518883-ce09059eeffa?w=800&q=80" alt="Opal Suites"
                        class="portfolio-image">
                    <div class="portfolio-content">
                        <h3>Opal Suites</h3>
                        <p>Real estate website with advanced property search and virtual tours</p>
                        <span class="portfolio-tag">Web Development</span>
                        <a href="/portfolio" class="btn btn-secondary"
                            style="margin-top: 12px; display: block; text-align: center;">View Project <Icon name="arrow-right" size={14} /></a>
                    </div>
                </div>
                <div class="portfolio-card scroll-reveal">
                    <span class="status-badge completed">Completed</span>
                    <img src="https://images.unsplash.com/photo-1427504494785-3a9ca7044f45?w=800&q=80" alt="ETCO Kenya"
                        class="portfolio-image">
                    <div class="portfolio-content">
                        <h3>ETCO Kenya</h3>
                        <p>NGO website for education and community outreach initiatives</p>
                        <span class="portfolio-tag">Web Design</span>
                        <a href="/portfolio" class="btn btn-secondary"
                            style="margin-top: 12px; display: block; text-align: center;">View Project <Icon name="arrow-right" size={14} /></a>
                    </div>
                </div>
                <div class="portfolio-card scroll-reveal">
                    <span class="status-badge completed">Completed</span>
                    <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=800&q=80" alt="Jenga365"
                        class="portfolio-image">
                    <div class="portfolio-content">
                        <h3>Jenga365</h3>
                        <p>Innovative mentorship platform connecting professionals</p>
                        <span class="portfolio-tag">Platform</span>
                        <a href="/portfolio" class="btn btn-secondary"
                            style="margin-top: 12px; display: block; text-align: center;">View Project <Icon name="arrow-right" size={14} /></a>
                    </div>
                </div>
                <div class="portfolio-card scroll-reveal">
                    <span class="status-badge completed">Completed</span>
                    <img src="https://images.unsplash.com/photo-1531746790731-6c087fecd65a?w=800&q=80"
                        alt="Botpress Chatbot" class="portfolio-image">
                    <div class="portfolio-content">
                        <h3>Botpress Chatbot</h3>
                        <p>Intelligent chatbot for seamless customer engagement</p>
                        <span class="portfolio-tag">AI Integration</span>
                        <a href="/portfolio" class="btn btn-secondary"
                            style="margin-top: 12px; display: block; text-align: center;">View Project <Icon name="arrow-right" size={14} /></a>
                    </div>
                </div>
            </div>

            <!-- Ongoing Projects -->
            <div class="portfolio-tab-content portfolio-grid" id="ongoing-tab">
                <div class="portfolio-card scroll-reveal">
                    <span class="status-badge in-progress">In Progress</span>
                    <img src="https://images.unsplash.com/photo-1461896836934-ffe607ba8211?w=800&q=80"
                        alt="Nondescripts RFC" class="portfolio-image">
                    <div class="portfolio-content">
                        <h3>Nondescripts RFC</h3>
                        <p>E-commerce platform for rugby merchandise and fan engagement</p>
                        <span class="portfolio-tag">E-commerce</span>
                        <a href="/portfolio" class="btn btn-secondary"
                            style="margin-top: 12px; display: block; text-align: center;">View Project <Icon name="arrow-right" size={14} /></a>
                    </div>
                </div>
                <div class="portfolio-card scroll-reveal">
                    <span class="status-badge in-progress">In Progress</span>
                    <img src="https://images.unsplash.com/photo-1563986768609-322da13575f3?w=800&q=80" alt="Midesa"
                        class="portfolio-image">
                    <div class="portfolio-content">
                        <h3>Midesa</h3>
                        <p>Digital payments aggregator and marketplace</p>
                        <span class="portfolio-tag">FinTech</span>
                        <a href="/portfolio" class="btn btn-secondary"
                            style="margin-top: 12px; display: block; text-align: center;">View Project <Icon name="arrow-right" size={14} /></a>
                    </div>
                </div>
                <div class="portfolio-card scroll-reveal">
                    <span class="status-badge in-progress">In Progress</span>
                    <img src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&q=80"
                        alt="Analytics Dashboard" class="portfolio-image">
                    <div class="portfolio-content">
                        <h3>Analytics Dashboard</h3>
                        <p>Real-time analytics and performance tracking</p>
                        <span class="portfolio-tag">Dashboard</span>
                        <a href="/portfolio" class="btn btn-secondary"
                            style="margin-top: 12px; display: block; text-align: center;">View Project <Icon name="arrow-right" size={14} /></a>
                    </div>
                </div>
            </div>

            <!-- View All Projects Button -->
            <div class="cta-buttons" style="justify-content: center; margin-top: 48px;">
                <a href="/portfolio" class="btn btn-primary">
                    <Icon name="squares-2x2" size={18} />
                    View All Projects
                </a>
            </div>
        </div>
    </section>

    <!-- Testimonials -->
    <section class="testimonials">
        <div class="container">
            <div class="section-header scroll-reveal">
                <h2>What Our Clients Say</h2>
                <p>Real feedback from real clients who trust us</p>
            </div>
            <div class="testimonials-grid">
                <div class="testimonial-card scroll-reveal">
                    <p class="testimonial-text">
                        "Fikanova delivered exactly what we needed for our real estate platform.
                        Professional, responsive, and delivered on time."
                    </p>
                    <div class="testimonial-author">
                        <div class="author-avatar">OS</div>
                        <div class="author-info">
                            <h4>Opal Suites Team</h4>
                            <p>Real Estate Platform</p>
                        </div>
                    </div>
                </div>
                <div class="testimonial-card scroll-reveal">
                    <p class="testimonial-text">
                        "The chatbot integration has transformed our customer service.
                        Available 24/7 and handles inquiries flawlessly."
                    </p>
                    <div class="testimonial-author">
                        <div class="author-avatar">TC</div>
                        <div class="author-info">
                            <h4>Tech Startup Client</h4>
                            <p>AI Implementation</p>
                        </div>
                    </div>
                </div>
                <div class="testimonial-card scroll-reveal">
                    <p class="testimonial-text">
                        "Working with Fikanova felt like having a dedicated tech partner.
                        Exceptional attention to detail and innovative solutions."
                    </p>
                    <div class="testimonial-author">
                        <div class="author-avatar">J3</div>
                        <div class="author-info">
                            <h4>Jenga365</h4>
                            <p>Mentorship Platform</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section" id="contact">
        <div class="container">
            <div class="cta-content scroll-reveal">
                <h2>Ready to Transform Your Business?</h2>
                <p>Let's discuss how we can help you achieve your goals with innovative AI and tech solutions.</p>
                <div class="cta-buttons">
                    <a href="mailto:info@fikanova.co.ke" class="btn btn-primary">
                        <Icon name="envelope" size={18} />
                        Get in Touch
                    </a>
                    <a href="#services" class="btn btn-secondary">
                        Learn More
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
