---
import Icon from '../components/Icon.astro';
import SocialIcon from '../components/SocialIcon.astro';
/**
 * The Pulse - Live System Monitor & Termite Stack Archive
 * Real-time agent activity and system transparency
 */
import Layout from '../layouts/Layout.astro';
import A2UIMonitor from '../components/A2UIMonitor.jsx';
import ElementsMonitor from '../components/ElementsMonitor.jsx';
import AgentWorkforceMonitor from '../components/AgentWorkforceMonitor.jsx';
import { Client, Databases, Query } from 'appwrite';

// Initialize Appwrite
const client = new Client()
    .setEndpoint(import.meta.env.VITE_APPWRITE_ENDPOINT || 'https://fra.cloud.appwrite.io/v1')
    .setProject(import.meta.env.VITE_APPWRITE_PROJECT_ID || '6936df5800371a655e8e');

const databases = new Databases(client);
const DATABASE_ID = import.meta.env.VITE_APPWRITE_DATABASE_ID || '693703ef001133c62d78';

// Fetch recent system traces from Articles
let traces: any[] = [];
try {
    const response = await databases.listDocuments(
        DATABASE_ID,
        'Articles',
        [Query.orderDesc('published_at'), Query.limit(20)]
    );
    traces = response.documents;
} catch (error) {
    // Silently handle fetch errors
}

// Format date for display
function formatDate(dateString: string): string {
    return new Date(dateString).toLocaleDateString('en-US', {
        month: 'short', day: 'numeric', year: 'numeric'
    });
}
---

<Layout title="The Pulse - Live System Monitor">
    <!-- Hero -->
    <section class="pulse-hero">
        <div class="container">
            <div class="hero-badge">
                <span class="live-dot"></span>
                LIVE SYSTEM MONITOR
            </div>
            <h1>The <span class="gradient-text">Pulse</span></h1>
            <p class="hero-desc">
                Radical transparency. Watch our AI workforce in real-time.
                Every action logged. Every decision traced.
            </p>
        </div>
    </section>

    <!-- Live Monitors Grid -->
    <main class="pulse-main">
        <div class="container">
            <!-- 3 Elements Market Monitor -->
            <section class="monitor-section">
                <div class="section-header">
                    <h2><Icon name="chart-bar" size={24} /> The 3 Elements</h2>
                    <span class="section-badge">Live Metrics</span>
                </div>
                <ElementsMonitor client:load />
            </section>

            <!-- Agent Workforce Monitor -->
            <section class="monitor-section">
                <div class="section-header">
                    <h2><Icon name="cpu-chip" size={18} /> Agent Workforce</h2>
                    <span class="section-badge">L2 C-Suite</span>
                </div>
                <AgentWorkforceMonitor client:load />
            </section>

            <!-- A2UI Terminal -->
            <section class="monitor-section">
                <div class="section-header">
                    <h2><Icon name="command-line" size={24} /> A2UI Terminal</h2>
                    <span class="section-badge">Live Logs</span>
                </div>
                <A2UIMonitor client:load maxLines={30} />
            </section>

            <!-- The Termite Stack Archive -->
            <section class="termite-stack">
                <div class="section-header">
                    <h2><Icon name="squares-2x2" size={24} /> The Termite Stack</h2>
                    <span class="section-badge">System Traces</span>
                </div>
                <p class="stack-desc">
                    Knowledge elements from our AI workforce. Every article is a System Trace,
                    documenting learnings for public benefit.
                </p>
                
                <div class="trace-grid">
                    {traces.length === 0 ? (
                        <div class="empty-traces">
                            <Icon name="cpu-chip" size={24} />
                            <p>System traces loading...</p>
                        </div>
                    ) : (
                        traces.slice(0, 9).map((trace) => (
                            <article class="trace-card">
                                <a href={`/newsletter/${trace.slug}`}>
                                    <div class="trace-header">
                                        <span class="trace-type">
                                            <Icon name="code-bracket" size={16} />
                                            TRACE
                                        </span>
                                        <time>{formatDate(trace.published_at)}</time>
                                    </div>
                                    <h3>{trace.title}</h3>
                                    <p class="trace-excerpt">
                                        {trace.excerpt?.substring(0, 120)}...
                                    </p>
                                    <div class="trace-meta">
                                        <span class="trace-tags">
                                            {trace.tags?.split(',').slice(0, 2).map((tag: string) => (
                                                <span class="tag">{tag.trim()}</span>
                                            ))}
                                        </span>
                                        <span class="trace-link">
                                            View trace <Icon name="arrow-right" size={14} />
                                        </span>
                                    </div>
                                </a>
                            </article>
                        ))
                    )}
                </div>

                <div class="stack-cta">
                    <a href="/newsletter" class="btn-secondary">
                        <Icon name="document-text" size={24} />
                        View Full Archive
                    </a>
                </div>
            </section>

            <!-- Newsletter Signup -->
            <section class="newsletter-section">
                <div class="newsletter-card">
                    <div class="newsletter-content">
                        <h2>Subscribe to The Termite Stack</h2>
                        <p>Weekly system traces delivered to your inbox. AI insights without the hype.</p>
                    </div>
                    <form 
                        action="https://api.hsforms.com/submissions/v3/public/submit/formsnext/multipart/PORTAL_ID/FORM_ID" 
                        method="POST"
                        class="newsletter-form"
                    >
                        <input 
                            type="email" 
                            name="email" 
                            placeholder="your@email.com" 
                            required 
                            class="newsletter-input"
                        />
                        <input type="hidden" name="firstname" value="" />
                        <input type="hidden" name="lastname" value="" />
                        <button type="submit" class="newsletter-btn">
                            <Icon name="paper-airplane" size={18} />
                            Subscribe
                        </button>
                    </form>
                </div>
            </section>
        </div>
    </main>
</Layout>

<style>
    .pulse-hero {
        padding: 140px 24px 80px;
        text-align: center;
        background: linear-gradient(180deg, #0a0a0f 0%, #12121a 100%);
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 12px;
        font-weight: 600;
        color: #22c55e;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 24px;
    }

    .live-dot {
        width: 8px;
        height: 8px;
        background: #22c55e;
        border-radius: 50%;
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0%, 100% { opacity: 1; transform: scale(1); }
        50% { opacity: 0.5; transform: scale(1.2); }
    }

    .pulse-hero h1 {
        font-size: clamp(3rem, 8vw, 4.5rem);
        font-weight: 800;
        margin-bottom: 20px;
    }

    .gradient-text {
        background: linear-gradient(135deg, #8b5cf6, #22c55e);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .hero-desc {
        font-size: 18px;
        color: #e0e0e0;
        max-width: 550px;
        margin: 0 auto;
        line-height: 1.6;
    }

    :global(body.theme-light) .pulse-hero {
        background: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
    }

    :global(body.theme-light) .pulse-hero h1 {
        color: #1a365d;
    }

    :global(body.theme-light) .hero-desc {
        color: var(--text-secondary);
    }

    :global(body.theme-light) .hero-badge {
        color: #16a34a;
    }

    :global(body.theme-light) .live-dot {
        background: #16a34a;
    }

    .pulse-main {
        padding: 0 24px 80px;
        background: var(--dark-bg);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .monitor-section {
        margin-bottom: 48px;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .section-header h2 {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 20px;
        font-weight: 600;
    }

    .section-header h2 i {
        color: var(--primary);
    }

    .section-badge {
        font-size: 11px;
        font-weight: 600;
        padding: 6px 12px;
        background: rgba(139, 92, 246, 0.15);
        color: var(--primary);
        border-radius: 20px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Termite Stack */
    .termite-stack {
        padding-top: 40px;
        border-top: 1px solid var(--border-subtle);
    }

    .stack-desc {
        color: var(--text-secondary);
        margin-bottom: 32px;
        max-width: 600px;
    }

    .trace-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 32px;
    }

    .trace-card {
        background: var(--dark-card);
        border: 1px solid var(--border-subtle);
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .trace-card:hover {
        border-color: var(--primary);
        transform: translateY(-4px);
    }

    .trace-card a {
        display: block;
        padding: 24px;
        text-decoration: none;
        color: inherit;
    }

    .trace-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
    }

    .trace-type {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 10px;
        font-weight: 700;
        color: #22c55e;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .trace-header time {
        font-size: 12px;
        color: var(--text-tertiary);
    }

    .trace-card h3 {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 12px;
        line-height: 1.4;
    }

    .trace-excerpt {
        font-size: 13px;
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 16px;
    }

    .trace-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .trace-tags {
        display: flex;
        gap: 6px;
    }

    .tag {
        font-size: 10px;
        padding: 4px 8px;
        background: rgba(139, 92, 246, 0.15);
        color: var(--primary);
        border-radius: 4px;
        text-transform: lowercase;
    }

    .trace-link {
        font-size: 12px;
        color: var(--primary);
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .trace-card:hover .trace-link i {
        transform: translateX(4px);
    }

    .trace-link i {
        transition: transform 0.2s;
    }

    .empty-traces {
        grid-column: 1 / -1;
        text-align: center;
        padding: 60px 20px;
        background: var(--dark-card);
        border: 1px dashed var(--border-subtle);
        border-radius: 16px;
        color: var(--text-tertiary);
    }

    .empty-traces i {
        font-size: 32px;
        margin-bottom: 12px;
        opacity: 0.5;
    }

    .stack-cta {
        text-align: center;
    }

    .btn-secondary {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 14px 28px;
        background: transparent;
        border: 1px solid var(--border-subtle);
        border-radius: 10px;
        color: var(--text-primary);
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-secondary:hover {
        border-color: var(--primary);
        color: var(--primary);
    }

    /* Newsletter */
    .newsletter-section {
        margin-top: 60px;
    }

    .newsletter-card {
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.15) 0%, rgba(34, 197, 94, 0.1) 100%);
        border: 1px solid rgba(139, 92, 246, 0.3);
        border-radius: 20px;
        padding: 48px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 40px;
    }

    .newsletter-content h2 {
        font-size: 24px;
        margin-bottom: 8px;
    }

    .newsletter-content p {
        color: var(--text-secondary);
    }

    .newsletter-form {
        display: flex;
        gap: 12px;
    }

    .newsletter-input {
        padding: 14px 18px;
        background: var(--dark-bg);
        border: 1px solid var(--border-subtle);
        border-radius: 10px;
        color: var(--text-primary);
        width: 280px;
    }

    .newsletter-input::placeholder {
        color: var(--text-tertiary);
    }

    .newsletter-btn {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 14px 24px;
        background: var(--primary);
        border: none;
        border-radius: 10px;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }

    .newsletter-btn:hover {
        background: #7c3aed;
    }

    @media (max-width: 1024px) {
        .trace-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .trace-grid {
            grid-template-columns: 1fr;
        }

        .newsletter-card {
            flex-direction: column;
            text-align: center;
        }

        .newsletter-form {
            flex-direction: column;
            width: 100%;
        }

        .newsletter-input {
            width: 100%;
        }
    }
</style>
