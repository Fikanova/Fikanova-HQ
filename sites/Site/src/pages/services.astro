---
import Layout from '../layouts/Layout.astro';

// Services data - matches Appwrite DB structure
const services = {
    'Development': [
        { slug: 'web-development', title: 'Web Development', description: 'High-performance websites built with modern technologies.', price: 'Starts at KES 35,000' },
        { slug: 'mobile-app-development', title: 'Mobile App Development', description: 'Native Android & iOS apps for your business.', price: 'Starts at KES 80,000' },
        { slug: 'custom-software', title: 'Custom Software', description: 'Internal tools and enterprise solutions.', price: 'Custom Quote' }
    ],
    'Marketing': [
        { slug: 'seo-optimization', title: 'SEO Optimization', description: 'Rank #1 on Google with proven strategies.', price: 'Retainer: KES 15,000/mo' },
        { slug: 'social-media-marketing', title: 'Social Media Marketing', description: 'Grow your audience with automated content.', price: 'Retainer: KES 20,000/mo' },
        { slug: 'content-strategy', title: 'Content Strategy', description: 'Brand storytelling that converts.', price: 'Starts at KES 10,000' }
    ],
    'AI and Tech': [
        { slug: 'chatbot-integration', title: 'Chatbot Integration', description: '24/7 WhatsApp and web support automation.', price: 'Starts at KES 25,000' },
        { slug: 'ai-automation', title: 'AI Automation', description: 'Digital employees for repetitive tasks.', price: 'Custom Quote' },
        { slug: 'tech-consultation', title: 'Tech Consultation', description: 'Expert digital strategy advice.', price: 'Hourly Rate' }
    ]
};

const categoryIcons = {
    'Development': 'fas fa-code',
    'Marketing': 'fas fa-chart-line',
    'AI and Tech': 'fas fa-robot'
};
---

<Layout title="Our Services">
    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-badge">
                <span class="badge-dot"></span>
                Comprehensive Solutions
            </div>
            <h1>
                Our <span class="gradient-text">Services</span><br>
                Tailored for growth
            </h1>
            <p>
                From web development to AI integration, we provide end-to-end digital solutions.
            </p>
        </div>
    </section>

    <!-- Services Sections -->
    <main class="page-main">
        <div class="container">
            {Object.entries(services).map(([category, items]) => (
                <div style="margin-bottom: 80px;">
                    <div class="section-header scroll-reveal">
                        <h2><i class={categoryIcons[category]} style="margin-right: 12px;"></i>{category}</h2>
                    </div>
                    <div class="services-grid">
                        {items.map(service => (
                            <div class="service-card scroll-reveal">
                                <div class="service-icon">
                                    <i class={categoryIcons[category]}></i>
                                </div>
                                <h3>{service.title}</h3>
                                <p>{service.description}</p>
                                <p style="font-weight: 600; color: var(--primary); margin-top: 12px;">{service.price}</p>
                                <a href={`/service/${service.slug}`} class="btn btn-secondary" style="margin-top: 16px;">
                                    Learn More <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        ))}
                    </div>
                </div>
            ))}
        </div>
    </main>
</Layout>
