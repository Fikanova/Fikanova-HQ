---
import Icon from '../components/Icon.astro';
import SocialIcon from '../components/SocialIcon.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Impact | Fikanova">
    <section class="hero">
        <div class="container">
            <div class="hero-badge"><span class="badge-dot"></span>Measurable Results</div>
            <h1>Our <span class="gradient-text">Impact</span></h1>
            <p>Track record of delivering value for our clients and communities</p>
        </div>
    </section>

    <main class="page-main">
        <div class="container">
            <!-- Key Stats Grid -->
            <div class="stats-grid scroll-reveal">
                <div class="stat-item">
                    <h3>10+</h3>
                    <p>Projects Completed</p>
                </div>
                <div class="stat-item">
                    <h3>8+</h3>
                    <p>Happy Clients</p>
                </div>
                <div class="stat-item">
                    <h3>98%</h3>
                    <p>Client Satisfaction</p>
                </div>
                <div class="stat-item">
                    <h3>24/7</h3>
                    <p>AI Agent Uptime</p>
                </div>
            </div>

            <!-- Impact Areas Section -->
            <section class="impact-areas scroll-reveal">
                <h2 class="section-title">Impact Areas</h2>
                <p class="section-subtitle">Measuring our contribution to sustainable growth</p>
                
                <div class="impact-grid">
                    <!-- Economic Impact -->
                    <div class="impact-card">
                        <div class="impact-header">
                            <div class="impact-icon economic">
                                <Icon name="chart-bar" size={24} />
                            </div>
                            <div>
                                <h3>Economic Impact</h3>
                            </div>
                        </div>
                        <p class="impact-description">Helping SMEs reduce operational costs through automation and AI-powered solutions, enabling sustainable business growth.</p>
                    </div>

                    <!-- Social Impact -->
                    <div class="impact-card">
                        <div class="impact-header">
                            <div class="impact-icon social">
                                <Icon name="user-group" size={24} />
                            </div>
                            <div>
                                <h3>Social Impact</h3>
                            </div>
                        </div>
                        <p class="impact-description">Supporting communities and NGOs with technology solutions that amplify their reach and effectiveness.</p>
                    </div>

                    <!-- Environmental Impact -->
                    <div class="impact-card">
                        <div class="impact-header">
                            <div class="impact-icon environmental">
                                <Icon name="sparkles" size={24} />
                            </div>
                            <div>
                                <h3>Environmental Impact</h3>
                            </div>
                        </div>
                        <p class="impact-description">Championing digital-first operations and remote work to minimize our carbon footprint and promote sustainable practices.</p>
                    </div>
                </div>
            </section>

            <!-- ESG Commitment Section -->
            <section class="esg-section scroll-reveal">
                <div class="section-header-center">
                    <span class="section-tag">ESG Commitment</span>
                    <h2 class="section-title">Strategic Impact</h2>
                    <p class="section-subtitle">Environmental, Social, and Governance goals driving our operations</p>
                </div>

                <div class="esg-grid">
                    <!-- Environmental -->
                    <div class="esg-card">
                        <div class="esg-icon environmental">
                            <Icon name="sparkles" size={24} />
                        </div>
                        <h3>Green Computing</h3>
                        <p>Optimizing code to reduce server load and carbon footprint through efficient algorithms and edge deployment.</p>
                        <ul class="esg-list">
                            <li><Icon name="check" size={16} /> Optimized codebases</li>
                            <li><Icon name="check" size={16} /> 100% remote operations</li>
                            <li><Icon name="check" size={16} /> Minimal infrastructure</li>
                        </ul>
                    </div>

                    <!-- Social -->
                    <div class="esg-card">
                        <div class="esg-icon social">
                            <Icon name="hand-raised" size={24} />
                        </div>
                        <h3>Digital Inclusion</h3>
                        <p>Providing enterprise-grade technology to NGOs and community groups at accessible rates.</p>
                        <ul class="esg-list">
                            <li><Icon name="check" size={16} /> NGO partnerships</li>
                            <li><Icon name="check" size={16} /> Accessible pricing</li>
                            <li><Icon name="check" size={16} /> Skills transfer</li>
                        </ul>
                    </div>

                    <!-- Governance -->
                    <div class="esg-card">
                        <div class="esg-icon governance">
                            <Icon name="scale" size={24} />
                        </div>
                        <h3>Governance</h3>
                        <p>Automating tax and legal compliance for transparency and accountability in all operations.</p>
                        <ul class="esg-list">
                            <li><Icon name="check" size={16} /> Automated compliance</li>
                            <li><Icon name="check" size={16} /> Transparent reporting</li>
                            <li><Icon name="check" size={16} /> Ethical AI practices</li>
                        </ul>
                    </div>
                </div>
            </section>

            <!-- Call to Action -->
            <section class="cta-section scroll-reveal">
                <h2>Ready to build your digital workforce?</h2>
                <p>Let's transform your operations with intelligent automation.</p>
                <a href="/contact" class="btn-primary">Start a Project</a>
            </section>
        </div>
    </main>
</Layout>

<style>
    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 24px;
        margin-bottom: 48px;
    }

    .stat-item {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.03) 0%, rgba(255, 255, 255, 0.01) 100%);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        padding: 36px 24px;
        text-align: center;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .stat-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(201, 169, 98, 0.5), transparent);
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .stat-item:hover {
        border-color: rgba(201, 169, 98, 0.3);
        transform: translateY(-6px);
        box-shadow: 
            0 20px 60px rgba(0, 0, 0, 0.3),
            0 0 40px rgba(201, 169, 98, 0.1);
    }

    .stat-item:hover::before {
        opacity: 1;
    }

    .stat-item h3 {
        font-size: 48px;
        font-weight: 800;
        background: linear-gradient(135deg, #ffffff 0%, #c9a962 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 8px;
    }

    .stat-item p {
        color: var(--text-secondary);
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 500;
    }

    .stat-icon {
        width: 40px;
        height: 40px;
        margin-bottom: 16px;
        object-fit: contain;
    }

    /* Section Titles */
    .section-title {
        font-size: 32px;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 8px;
    }

    .section-subtitle {
        color: var(--text-secondary);
        margin-bottom: 40px;
    }

    /* Impact Areas */
    .impact-areas {
        margin-top: 64px;
        margin-bottom: 64px;
    }

    .impact-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 24px;
    }

    .impact-card {
        background: linear-gradient(145deg, rgba(255, 255, 255, 0.04) 0%, rgba(255, 255, 255, 0.01) 100%);
        backdrop-filter: blur(16px);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 24px;
        padding: 32px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .impact-card::after {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 24px;
        padding: 1px;
        background: linear-gradient(135deg, rgba(201, 169, 98, 0.2), transparent, rgba(201, 169, 98, 0.1));
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        opacity: 0;
        transition: opacity 0.4s ease;
        pointer-events: none;
    }

    .impact-card:hover {
        transform: translateY(-8px);
        box-shadow: 
            0 30px 80px rgba(0, 0, 0, 0.25),
            0 0 60px rgba(201, 169, 98, 0.08);
    }

    .impact-card:hover::after {
        opacity: 1;
    }

    .impact-header {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 16px;
    }

    .impact-description {
        color: var(--text-secondary);
        font-size: 0.95rem;
        line-height: 1.7;
    }

    .impact-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }

    .impact-icon.economic {
        background: rgba(16, 185, 129, 0.15);
        color: var(--accent-green);
    }

    .impact-icon.social {
        background: rgba(59, 130, 246, 0.15);
        color: var(--accent-blue);
    }

    .impact-icon.environmental {
        background: rgba(16, 185, 129, 0.15);
        color: var(--accent-green);
    }

    .impact-header h3 {
        font-size: 18px;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0 0 4px 0;
    }

    .impact-tag {
        font-size: 11px;
        color: var(--text-tertiary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Charts */
    .impact-chart {
        height: 100px;
        margin-bottom: 20px;
    }

    .area-chart, .bar-chart {
        width: 100%;
        height: 100%;
    }

    .donut-chart-container {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .donut-chart {
        width: 100px;
        height: 100px;
    }

    .donut-center {
        position: absolute;
        text-align: center;
    }

    .donut-value {
        display: block;
        font-size: 22px;
        font-weight: 700;
        color: var(--text-primary);
    }

    .donut-label {
        font-size: 10px;
        color: var(--text-tertiary);
    }

    /* Impact Metrics */
    .impact-metrics {
        display: flex;
        justify-content: space-around;
        padding-top: 20px;
        border-top: 1px solid var(--border-subtle);
    }

    .metric {
        text-align: center;
    }

    .metric-value {
        display: block;
        font-size: 20px;
        font-weight: 700;
        color: var(--text-primary);
    }

    .metric-label {
        font-size: 12px;
        color: var(--text-tertiary);
    }

    /* CTA Section */
    .cta-section {
        text-align: center;
        background: var(--dark-card);
        border: 1px solid var(--border-subtle);
        border-radius: 24px;
        padding: 60px 40px;
    }

    .cta-section h2 {
        font-size: 28px;
        color: var(--text-primary);
        margin-bottom: 12px;
    }

    .cta-section p {
        color: var(--text-secondary);
        margin-bottom: 28px;
    }

    .btn-primary {
        display: inline-block;
        background: var(--primary);
        color: var(--dark-bg);
        padding: 14px 32px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(255, 255, 255, 0.2);
    }

    /* ESG Section */
    .esg-section {
        margin-top: 64px;
        margin-bottom: 64px;
    }

    .section-header-center {
        text-align: center;
        margin-bottom: 48px;
    }

    .section-tag {
        display: inline-block;
        font-size: 12px;
        color: var(--primary);
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 600;
        margin-bottom: 12px;
    }

    .esg-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
    }

    .esg-card {
        background: var(--dark-card);
        border: 1px solid var(--border-subtle);
        border-radius: 20px;
        padding: 28px;
        transition: all 0.3s ease;
    }

    .esg-card:hover {
        border-color: var(--border-medium);
        transform: translateY(-4px);
    }

    .esg-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        margin-bottom: 20px;
    }

    .esg-icon.environmental {
        background: rgba(16, 185, 129, 0.15);
        color: var(--accent-green);
    }

    .esg-icon.social {
        background: rgba(59, 130, 246, 0.15);
        color: var(--accent-blue);
    }

    .esg-icon.governance {
        background: rgba(139, 92, 246, 0.15);
        color: var(--primary);
    }

    .esg-card h3 {
        font-size: 18px;
        margin-bottom: 12px;
    }

    .esg-card > p {
        font-size: 14px;
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 16px;
    }

    .esg-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .esg-list li {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 13px;
        color: var(--text-secondary);
    }

    .esg-list li i {
        color: var(--accent-green);
        font-size: 11px;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .stat-item h3 {
            font-size: 32px;
        }

        .impact-grid,
        .esg-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Light Mode Overrides - Dark blue text on white backgrounds */
    :global(body.theme-light) .stat-item {
        background: linear-gradient(135deg, rgba(26, 54, 93, 0.03) 0%, rgba(26, 54, 93, 0.01) 100%);
        border: 1px solid rgba(26, 54, 93, 0.08);
    }

    :global(body.theme-light) .stat-item::before {
        background: linear-gradient(90deg, transparent, rgba(26, 54, 93, 0.3), transparent);
    }

    :global(body.theme-light) .stat-item:hover {
        border-color: rgba(26, 54, 93, 0.2);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    }

    :global(body.theme-light) .stat-item h3 {
        background: #1a365d;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    :global(body.theme-light) .stat-item p {
        color: #444444;
    }

    :global(body.theme-light) .section-title {
        color: #1a365d;
    }

    :global(body.theme-light) .section-subtitle {
        color: #444444;
    }

    :global(body.theme-light) .section-tag {
        color: #1a365d;
    }

    :global(body.theme-light) .impact-card {
        background: linear-gradient(145deg, rgba(26, 54, 93, 0.04) 0%, rgba(26, 54, 93, 0.01) 100%);
        border: 1px solid rgba(26, 54, 93, 0.1);
    }

    :global(body.theme-light) .impact-card::after {
        background: linear-gradient(135deg, rgba(26, 54, 93, 0.15), transparent, rgba(26, 54, 93, 0.1));
    }

    :global(body.theme-light) .impact-header h3 {
        color: #1a365d;
    }

    :global(body.theme-light) .metric-value,
    :global(body.theme-light) .donut-value {
        color: #1a365d;
    }

    :global(body.theme-light) .esg-card {
        background: #ffffff;
        border: 1px solid rgba(26, 54, 93, 0.1);
    }

    :global(body.theme-light) .esg-card h3 {
        color: #1a365d;
    }

    :global(body.theme-light) .cta-section {
        background: #f8f9fa;
        border-color: rgba(26, 54, 93, 0.1);
    }

    :global(body.theme-light) .cta-section h2 {
        color: #1a365d;
    }
</style>
