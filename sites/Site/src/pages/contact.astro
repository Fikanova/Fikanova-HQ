---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us | Fikanova">
    <!-- Hero Section -->
    <section class="contact-hero">
        <div class="container">
            <div class="hero-badge"><span class="badge-dot"></span>Let's Connect</div>
            <h1>Contact <span class="gradient-text">Us</span></h1>
            <p class="hero-tagline">Ready to build your digital workforce?</p>
        </div>
    </section>

    <main class="page-main">
        <div class="container">
            <div class="contact-grid">
                <!-- Contact Info -->
                <div class="contact-info scroll-reveal">
                    <div class="info-header">
                        <span class="info-tag">Get in Touch</span>
                        <h2>We'd love to hear from you</h2>
                        <p>Reach out and let's discuss how we can help automate your operations.</p>
                    </div>

                    <div class="contact-items">
                        <a href="mailto:info@fikanova.co.ke" class="contact-item">
                            <div class="contact-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <h3>Email</h3>
                                <span>info@fikanova.co.ke</span>
                            </div>
                            <i class="fas fa-arrow-right item-arrow"></i>
                        </a>

                        <a href="https://www.fikanova.co.ke" target="_blank" class="contact-item">
                            <div class="contact-icon">
                                <i class="fas fa-globe"></i>
                            </div>
                            <div>
                                <h3>Website</h3>
                                <span>www.fikanova.co.ke</span>
                            </div>
                            <i class="fas fa-arrow-right item-arrow"></i>
                        </a>

                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <h3>Location</h3>
                                <span>Nairobi, Kenya</span>
                            </div>
                        </div>

                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="fas fa-robot"></i>
                            </div>
                            <div>
                                <h3>AI Agents</h3>
                                <span>Available 24/7/365</span>
                            </div>
                        </div>
                    </div>

                    <!-- Company Badge -->
                    <div class="company-badge">
                        <div class="badge-content">
                            <span class="badge-label">Founded</span>
                            <span class="badge-value">July 25, 2025</span>
                        </div>
                        <div class="badge-divider"></div>
                        <div class="badge-content">
                            <span class="badge-label">Model</span>
                            <span class="badge-value">Human-AI Supervisor</span>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="contact-form-card scroll-reveal">
                    <div class="form-header">
                        <h3>Send us a message</h3>
                        <p>Tell us about your project and we'll get back to you within 24 hours.</p>
                    </div>

                    <form id="contactForm">
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Name</label>
                                <input type="text" id="name" class="form-input" placeholder="Your name" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Email</label>
                                <input type="email" id="email" class="form-input" placeholder="you@example.com" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">What can we help with?</label>
                            <select id="service" class="form-input">
                                <option value="">Select a service...</option>
                                <option value="ai-automation">AI & Automation</option>
                                <option value="web-development">Web Development</option>
                                <option value="mobile-app">Mobile App Development</option>
                                <option value="chatbot">Chatbot Integration</option>
                                <option value="seo">SEO & Marketing</option>
                                <option value="consultation">Tech Consultation</option>
                                <option value="other">Other</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Message</label>
                            <textarea id="message" class="form-input" rows="5" placeholder="Tell us about your project, challenges, and goals..." required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary submit-btn">
                            <i class="fas fa-paper-plane"></i> Send Message
                        </button>
                    </form>
                </div>
            </div>

