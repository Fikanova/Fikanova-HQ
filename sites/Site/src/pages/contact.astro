            </div>
        </div>
    </main>
</Layout>

<style>
    /* Hero */
    .contact-hero {
        padding: 160px 24px 60px;
        text-align: center;
        background: radial-gradient(ellipse at top, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
    }

    .hero-tagline {
        font-size: 20px;
        color: #e0e0e0;
    }

    :global(body.theme-light) .hero-tagline {
        color: var(--text-secondary);
    }

    /* Grid Layout */
    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1.2fr;
        gap: 48px;
        margin-bottom: 60px;
    }

    /* Contact Info */
    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    .info-header {
        margin-bottom: 8px;
    }

    .info-tag {
        display: inline-block;
        font-size: 12px;
        color: var(--primary);
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 600;
        margin-bottom: 12px;
    }

    .info-header h2 {
        font-size: 28px;
        margin-bottom: 12px;
    }

    .info-header p {
        color: var(--text-secondary);
        font-size: 15px;
    }

    .contact-items {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 20px;
        background: var(--dark-card);
        border: 1px solid var(--border-subtle);
        border-radius: 16px;
        text-decoration: none;
        color: inherit;
        transition: all 0.3s ease;
    }

    a.contact-item:hover {
        border-color: var(--primary);
        transform: translateX(4px);
    }

    .contact-icon {
        width: 44px;
        height: 44px;
        background: rgba(139, 92, 246, 0.15);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary);
        font-size: 18px;
        flex-shrink: 0;
    }

    .contact-item h3 {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 2px;
    }

    .contact-item span {
        color: var(--text-secondary);
        font-size: 14px;
    }

    .item-arrow {
        margin-left: auto;
        color: var(--text-tertiary);
        transition: all 0.3s ease;
    }

    a.contact-item:hover .item-arrow {
        color: var(--primary);
        transform: translateX(4px);
    }

    /* Company Badge */
    .company-badge {
        display: flex;
        align-items: center;
        gap: 24px;
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(16, 185, 129, 0.05) 100%);
        border: 1px solid var(--primary);
        border-radius: 16px;
        padding: 20px 24px;
    }

    .badge-content {
        display: flex;
        flex-direction: column;
    }

    .badge-label {
        font-size: 11px;
        color: var(--text-tertiary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .badge-value {
        font-size: 14px;
        font-weight: 600;
        color: var(--text-primary);
    }

    .badge-divider {
        width: 1px;
        height: 36px;
        background: var(--border-subtle);
    }

    /* Form Card */
    .contact-form-card {
        background: var(--dark-card);
        border: 1px solid var(--border-subtle);
        border-radius: 24px;
        padding: 36px;
    }

    .form-header {
        margin-bottom: 28px;
    }

    .form-header h3 {
        font-size: 22px;
        margin-bottom: 8px;
    }

    .form-header p {
        color: var(--text-secondary);
        font-size: 14px;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        font-size: 14px;
    }

    .form-input {
        width: 100%;
        padding: 14px 16px;
        background: var(--dark-surface);
        border: 1px solid var(--border-subtle);
        border-radius: 12px;
        color: var(--text-primary);
        font-size: 15px;
        transition: all 0.2s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
    }

    select.form-input {
        cursor: pointer;
    }

    textarea.form-input {
        resize: vertical;
        min-height: 120px;
    }

    .submit-btn {
        width: 100%;
        padding: 16px;
        font-size: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    /* Trust Section */
    .trust-section {
        display: flex;
        justify-content: center;
        gap: 48px;
        padding: 32px;
        background: var(--dark-card);
        border: 1px solid var(--border-subtle);
        border-radius: 20px;
        margin-bottom: 40px;
    }

    .trust-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
    }

    .trust-value {
        font-size: 28px;
    }

    .trust-label {
        font-size: 13px;
        color: var(--text-secondary);
        font-weight: 500;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .contact-grid {
            grid-template-columns: 1fr;
        }

        .form-row {
            grid-template-columns: 1fr;
        }

        .trust-section {
            flex-wrap: wrap;
            gap: 32px;
        }

        .company-badge {
            flex-wrap: wrap;
        }
    }
</style>

<script is:inline>
    document.getElementById('contactForm').addEventListener('submit', function(e) {
        e.preventDefault();
        const name = document.getElementById('name').value;
        const email = document.getElementById('email').value;
        const service = document.getElementById('service').value;
        const message = document.getElementById('message').value;
        
        const subject = service ? `Inquiry: ${service}` : 'Website Inquiry';
        const body = `Name: ${name}\nEmail: ${email}\nService: ${service || 'Not specified'}\n\n${message}`;
        
        // Open email client with pre-filled content
        const mailtoLink = `mailto:info@fikanova.co.ke?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
        window.location.href = mailtoLink;
    });
</script>
</Layout>
