---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  hideHeader?: boolean;
  hideFooter?: boolean;
}

const { title, hideHeader = false, hideFooter = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | Fikanova</title>
    <meta name="description" content="Fikanova - Vision â†’ Function. Engineering ideas into functioning AI systems.">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/assets/logos/favicon-dark.png">
    <link rel="apple-touch-icon" href="/assets/logos/favicon-dark.png">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Outfit:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    
    <!-- Lottie -->
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    
    <!-- Styles -->
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
    <div class="grid-background"></div>
    
    {!hideHeader && <Header />}
    
    <slot />
    
    {!hideFooter && <Footer />}
    
    <!-- Return to Top Button -->
    <button id="return-to-top" class="return-to-top" aria-label="Return to top">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="18 15 12 9 6 15"></polyline>
        </svg>
    </button>
    
    <script is:inline src="/assets/js/script.js"></script>
    
    <!-- HubSpot Tracking Code -->
    <script type="text/javascript" id="hs-script-loader" async defer src="//js-eu1.hs-scripts.com/147467438.js"></script>
</body>
</html>
