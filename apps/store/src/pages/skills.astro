---
import Layout from '../layouts/Layout.astro';

// Skills data - in production, fetch from Appwrite Skills collection
const skills = [
    { 
        slug: 'prd-generator', 
        name: 'PRD Generator', 
        description: 'Generate professional Product Requirement Documents from a brief description.',
        pricing: 'free',
        agent_type: 'L3_specialist',
        triggers: ['webhook', 'whatsapp'],
        icon: 'üìã',
        usage_count: 0
    },
    { 
        slug: 'sheng-sales-agent', 
        name: 'Sheng Sales Agent', 
        description: 'Conversational sales bot that speaks authentic Nairobi Sheng for local market reach.',
        pricing: 'free',
        agent_type: 'L3_specialist',
        triggers: ['whatsapp'],
        icon: 'üó£Ô∏è',
        usage_count: 0
    },
    { 
        slug: 'meeting-summarizer', 
        name: 'Meeting Summarizer', 
        description: 'Upload meeting recordings or notes and get structured action items and summaries.',
        pricing: 'free',
        agent_type: 'L3_specialist',
        triggers: ['webhook'],
        icon: 'üìù',
        usage_count: 0
    },
    { 
        slug: 'invoice-generator', 
        name: 'KRA eTIMS Invoice Bot', 
        description: 'Generate eTIMS-compliant invoices from WhatsApp commands.',
        pricing: 'free',
        agent_type: 'L3_specialist',
        triggers: ['whatsapp'],
        icon: 'üßæ',
        usage_count: 0
    }
];
---

<Layout title="Free AI Skills">
    <!-- Store Header -->
    <header class="store-header">
        <nav class="store-nav">
            <div class="store-logo">
                <a href="/"><img src="/assets/logos/fikanova-logo1.png" alt="Fikanova Store"></a>
            </div>
            
            <div class="store-categories">
                <a href="/" class="category-link">Products</a>
                <a href="/skills" class="category-link active">Free Skills</a>
            </div>
            
            <div class="store-actions">
                <a href="/login" class="store-link">Login</a>
                <a href="/signup" class="store-link">Sign Up</a>
            </div>
        </nav>
    </header>

    <!-- Hero -->
    <section class="skills-hero">
        <div class="container">
            <div class="hero-badge">üéÅ 100% Free</div>
            <h1>AI Skills <span class="gradient-text">Marketplace</span></h1>
            <p>Deploy pre-trained AI agents to your WhatsApp instantly. No code required.</p>
            <p class="hero-note">Building traction with quality skills. Monetization coming 2026.</p>
        </div>
    </section>

    <!-- Skills Grid -->
    <main class="skills-main">
        <div class="container">
            <div class="skills-grid">
                {skills.map(skill => (
                    <div class="skill-card" data-slug={skill.slug}>
                        <div class="skill-icon">{skill.icon}</div>
                        <div class="skill-badges">
                            <span class="skill-badge pricing">{skill.pricing.toUpperCase()}</span>
                            {skill.triggers.map(t => (
                                <span class="skill-badge trigger">{t}</span>
                            ))}
                        </div>
                        <h3 class="skill-name">{skill.name}</h3>
                        <p class="skill-desc">{skill.description}</p>
                        <div class="skill-footer">
                            <span class="skill-usage">
                                <i class="fas fa-users"></i> {skill.usage_count} deployments
                            </span>
                            <button class="deploy-btn" data-slug={skill.slug} data-name={skill.name}>
                                <i class="fab fa-whatsapp"></i> Deploy
                            </button>
                        </div>
                    </div>
                ))}
            </div>

            <!-- How it Works -->
            <section class="how-it-works">
                <h2>How It Works</h2>
                <div class="steps-grid">
                    <div class="step-card">
                        <div class="step-number">1</div>
                        <h4>Choose a Skill</h4>
                        <p>Browse our free catalog of pre-trained AI skills</p>
                    </div>
                    <div class="step-card">
                        <div class="step-number">2</div>
                        <h4>Connect WhatsApp</h4>
                        <p>Link your WhatsApp Business number (takes 2 minutes)</p>
                    </div>
                    <div class="step-card">
                        <div class="step-number">3</div>
                        <h4>Deploy & Use</h4>
                        <p>The skill is live instantly. Start chatting with your AI agent.</p>
                    </div>
                </div>
            </section>

            <!-- CTA -->
            <section class="skills-cta">
                <h2>Want to Build Custom Skills?</h2>
                <p>Our team can build custom AI agents tailored to your business needs.</p>
                <a href="https://fikanova.co.ke/contact" class="cta-btn">
                    <i class="fas fa-comments"></i> Let's Talk
                </a>
            </section>
        </div>
    </main>

    <!-- Deploy Modal -->
    <div id="deployModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Deploy <span id="modalSkillName">Skill</span></h3>
                <button id="closeModal" class="close-modal"><i class="fas fa-times"></i></button>
            </div>
            <div class="modal-body">
                <p>Connect your WhatsApp Business number to deploy this skill.</p>
                
                <div class="form-group">
                    <label>WhatsApp Business Phone Number</label>
                    <input type="tel" id="phoneNumber" placeholder="+254 7XX XXX XXX" class="form-input">
                </div>
                
                <div class="form-group">
                    <label>Email (for notifications)</label>
                    <input type="email" id="email" placeholder="you@company.com" class="form-input">
                </div>

                <div class="deploy-note">
                    <i class="fas fa-info-circle"></i>
                    <span>You'll receive setup instructions via email. No coding required.</span>
                </div>
            </div>
            <div class="modal-footer">
                <button id="confirmDeploy" class="deploy-confirm-btn">
                    <i class="fab fa-whatsapp"></i> Request Deployment
                </button>
            </div>
        </div>
    </div>
    <div id="modalOverlay" class="modal-overlay"></div>

    <!-- Footer -->
    <footer class="store-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-brand">
                    <img src="/assets/logos/fikanova-logo1.png" alt="Fikanova" class="footer-logo">
                    <p>Free AI skills for African SMEs.</p>
                </div>
                <div class="footer-links">
                    <a href="https://fikanova.co.ke">Main Site</a>
                    <a href="https://app.fikanova.co.ke">Client Portal</a>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 Fikanova Skills Marketplace. All skills are free during our traction phase.</p>
            </div>
        </div>
    </footer>

    <style>
        .store-header {
            background: var(--dark-bg);
            border-bottom: 1px solid var(--border-subtle);
            position: sticky;
            top: 0;
            z-index: 100;
        }
        .store-nav {
            max-width: 1200px;
            margin: 0 auto;
            padding: 16px 24px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 24px;
        }
        .store-logo img { height: 32px; }
        .store-categories { display: flex; gap: 24px; }
        .category-link { color: var(--text-secondary); font-weight: 500; }
        .category-link:hover, .category-link.active { color: var(--primary); }
        .store-actions { display: flex; gap: 16px; }
        .store-link { color: var(--text-secondary); font-weight: 500; }
        .store-link:hover { color: var(--primary); }

        .skills-hero {
            padding: 80px 24px;
            text-align: center;
        }
        .hero-badge {
            display: inline-block;
            background: rgba(34, 197, 94, 0.15);
            color: #22c55e;
            font-size: 14px;
            font-weight: 600;
            padding: 8px 16px;
            border-radius: 20px;
            margin-bottom: 24px;
        }
        .skills-hero h1 { font-size: 48px; margin-bottom: 16px; }
        .skills-hero p { color: var(--text-secondary); max-width: 600px; margin: 0 auto; }
        .hero-note { font-size: 14px !important; color: var(--text-tertiary) !important; margin-top: 16px !important; }
        .gradient-text {
            background: linear-gradient(135deg, var(--primary), #22c55e);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .skills-main { padding: 0 24px 80px; }

        .skills-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 24px;
            max-width: 1200px;
            margin: 0 auto 80px;
        }
        .skill-card {
            background: var(--dark-card);
            border: 1px solid var(--border-subtle);
            border-radius: 20px;
            padding: 24px;
            transition: transform 0.2s, border-color 0.2s;
        }
        .skill-card:hover {
            transform: translateY(-4px);
            border-color: var(--primary);
        }
        .skill-icon { font-size: 48px; margin-bottom: 16px; }
        .skill-badges { display: flex; gap: 8px; flex-wrap: wrap; margin-bottom: 12px; }
        .skill-badge {
            font-size: 11px;
            font-weight: 600;
            padding: 4px 10px;
            border-radius: 20px;
        }
        .skill-badge.pricing {
            background: rgba(34, 197, 94, 0.15);
            color: #22c55e;
        }
        .skill-badge.trigger {
            background: rgba(139, 92, 246, 0.15);
            color: var(--primary);
        }
        .skill-name { font-size: 18px; font-weight: 600; margin-bottom: 8px; }
        .skill-desc { color: var(--text-secondary); font-size: 14px; margin-bottom: 16px; }
        .skill-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .skill-usage {
            font-size: 12px;
            color: var(--text-tertiary);
        }
        .deploy-btn {
            background: #25D366;
            border: none;
            border-radius: 12px;
            padding: 12px 16px;
            color: white;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: background 0.2s;
        }
        .deploy-btn:hover { background: #1da851; }

        /* How it Works */
        .how-it-works {
            max-width: 900px;
            margin: 0 auto 80px;
            text-align: center;
        }
        .how-it-works h2 { margin-bottom: 40px; }
        .steps-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 32px;
        }
        .step-card {
            background: var(--dark-surface);
            border: 1px solid var(--border-subtle);
            border-radius: 16px;
            padding: 32px 24px;
        }
        .step-number {
            width: 48px;
            height: 48px;
            background: var(--primary);
            color: var(--dark-bg);
            font-size: 20px;
            font-weight: 700;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 16px;
        }
        .step-card h4 { margin-bottom: 8px; }
        .step-card p { color: var(--text-secondary); font-size: 14px; }

        /* CTA */
        .skills-cta {
            max-width: 600px;
            margin: 0 auto;
            text-align: center;
            background: var(--dark-card);
            border: 1px solid var(--border-subtle);
            border-radius: 24px;
            padding: 48px;
        }
        .skills-cta h2 { margin-bottom: 12px; }
        .skills-cta p { color: var(--text-secondary); margin-bottom: 24px; }
        .cta-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: var(--primary);
            color: var(--dark-bg);
            padding: 16px 32px;
            border-radius: 12px;
            font-weight: 600;
        }
        .cta-btn:hover { opacity: 0.9; }

        /* Modal */
        .modal {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.9);
            opacity: 0;
            visibility: hidden;
            z-index: 300;
            background: var(--dark-card);
            border: 1px solid var(--border-subtle);
            border-radius: 20px;
            width: 90%;
            max-width: 480px;
            transition: all 0.3s;
        }
        .modal.open { transform: translate(-50%, -50%) scale(1); opacity: 1; visibility: visible; }
        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.7);
            z-index: 250;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s;
        }
        .modal-overlay.open { opacity: 1; visibility: visible; }
        .modal-header {
            padding: 24px;
            border-bottom: 1px solid var(--border-subtle);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .close-modal { background: none; border: none; color: var(--text-secondary); font-size: 20px; cursor: pointer; }
        .modal-body { padding: 24px; }
        .form-group { margin-bottom: 20px; }
        .form-group label { display: block; margin-bottom: 8px; font-weight: 500; }
        .form-input {
            width: 100%;
            padding: 14px;
            background: var(--dark-surface);
            border: 1px solid var(--border-subtle);
            border-radius: 10px;
            color: var(--text-primary);
        }
        .deploy-note {
            background: rgba(59, 130, 246, 0.1);
            border-radius: 10px;
            padding: 16px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 14px;
            color: var(--text-secondary);
        }
        .deploy-note i { color: #3b82f6; }
        .modal-footer { padding: 0 24px 24px; }
        .deploy-confirm-btn {
            width: 100%;
            padding: 16px;
            background: #25D366;
            border: none;
            border-radius: 12px;
            color: white;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .store-footer {
            background: var(--dark-card);
            border-top: 1px solid var(--border-subtle);
            padding: 48px 24px 24px;
        }
        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
        }
        .footer-logo { height: 32px; margin-bottom: 12px; }
        .footer-links { display: flex; gap: 24px; }
        .footer-links a { color: var(--text-secondary); }
        .footer-bottom {
            max-width: 1200px;
            margin: 0 auto;
            padding-top: 24px;
            border-top: 1px solid var(--border-subtle);
            text-align: center;
            color: var(--text-tertiary);
        }

        @media (max-width: 768px) {
            .steps-grid { grid-template-columns: 1fr; }
            .skills-hero h1 { font-size: 32px; }
        }
    </style>

    <script is:inline>
        document.querySelectorAll('.deploy-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.getElementById('modalSkillName').textContent = btn.dataset.name;
                document.getElementById('deployModal').classList.add('open');
                document.getElementById('modalOverlay').classList.add('open');
            });
        });

        document.getElementById('closeModal').addEventListener('click', closeModal);
        document.getElementById('modalOverlay').addEventListener('click', closeModal);

        function closeModal() {
            document.getElementById('deployModal').classList.remove('open');
            document.getElementById('modalOverlay').classList.remove('open');
        }

        document.getElementById('confirmDeploy').addEventListener('click', () => {
            const phone = document.getElementById('phoneNumber').value;
            const email = document.getElementById('email').value;
            
            if (!phone || !email) {
                alert('Please fill in all fields');
                return;
            }
            
            // TODO: Send to backend
            alert('Deployment request received! Check your email for setup instructions.');
            closeModal();
        });
    </script>
</Layout>
