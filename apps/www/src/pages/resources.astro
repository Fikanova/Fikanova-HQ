---
import Layout from '../layouts/Layout.astro';

const resources = [
    { title: 'Getting Started with AI Chatbots', type: 'Guide', icon: 'fas fa-book' },
    { title: 'SEO Checklist 2025', type: 'Checklist', icon: 'fas fa-tasks' },
    { title: 'Website Launch Template', type: 'Template', icon: 'fas fa-file-alt' },
    { title: 'Social Media Calendar', type: 'Template', icon: 'fas fa-calendar' },
    { title: 'Tech Stack Decision Guide', type: 'Guide', icon: 'fas fa-code' },
    { title: 'Client Onboarding Workflow', type: 'Workflow', icon: 'fas fa-project-diagram' }
];
---

<Layout title="Resources">
    <div class="grid-background"></div>

    <header>
        <nav>
            <div class="logo">
                <a href="/"><img src="/assets/logos/fikanova-logo1.png" class="logo-image" /></a>
            </div>
            <div class="nav-desktop">
                <ul class="nav-menu">
                    <li id="nav-solutions-container" class="nav-item"></li>
                    <li id="nav-company-container" class="nav-item"></li>
                    <li id="nav-work-container" class="nav-item"></li>
                </ul>
            </div>
            <div class="nav-right">
                <button class="theme-toggle" id="themeToggle"><i class="fas fa-moon"></i></button>
                <a href="/contact" class="btn-call"><i class="fas fa-phone-alt"></i> Contact Us</a>
            </div>
        </nav>
    </header>

    <section class="hero">
        <div class="container">
            <div class="hero-badge"><span class="badge-dot"></span>Free Downloads</div>
            <h1><span class="gradient-text">Resources</span></h1>
            <p>Tools, templates, and guides to help your business grow</p>
        </div>
    </section>

    <main class="page-main">
        <div class="container">
            <div class="services-grid">
                {resources.map(resource => (
                    <div class="service-card scroll-reveal">
                        <div class="service-icon">
                            <i class={resource.icon}></i>
                        </div>
                        <span style="color: var(--primary); font-size: 12px; font-weight: 600; text-transform: uppercase;">{resource.type}</span>
                        <h3 style="margin-top: 8px;">{resource.title}</h3>
                        <a href="#" class="btn btn-secondary" style="margin-top: 16px;">
                            Download <i class="fas fa-download"></i>
                        </a>
                    </div>
                ))}
            </div>
        </div>
    </main>

    <footer>
        <div class="container">
            <div class="footer-bottom"><p>&copy; 2025 Fikanova Limited. All rights reserved.</p></div>
        </div>
    </footer>

    <script is:inline src="/assets/js/script.js"></script>
    <script is:inline src="/assets/js/dynamic-menu.js"></script>
</Layout>
