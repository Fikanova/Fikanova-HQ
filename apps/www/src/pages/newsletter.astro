---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Newsletter">
    <section class="hero">
        <div class="container">
            <div class="hero-badge"><span class="badge-dot"></span>Stay Updated</div>
            <h1><span class="gradient-text">Newsletter</span></h1>
            <p>Get the latest insights on AI, tech, and digital growth</p>
        </div>
    </section>

    <main class="page-main">
        <div class="container">
            <div class="scroll-reveal" style="max-width: 600px; margin: 0 auto; text-align: center;">
                <div style="background: var(--dark-card); border: 1px solid var(--border-subtle); border-radius: 20px; padding: 48px;">
                    <i class="fas fa-envelope" style="font-size: 48px; color: var(--primary); margin-bottom: 24px;"></i>
                    <h2 style="margin-bottom: 16px;">Subscribe to Our Newsletter</h2>
                    <p style="color: var(--text-secondary); margin-bottom: 32px;">
                        Join 500+ business owners getting weekly tips on AI automation, 
                        web development, and digital marketing.
                    </p>

                    <form id="newsletterForm" style="display: flex; flex-direction: column; gap: 16px;">
                        <input 
                            type="email" 
                            required
                            placeholder="Enter your email"
                            style="padding: 14px 20px; border: 1px solid var(--border-subtle); border-radius: 12px; background: var(--dark-card); color: var(--text-primary); font-size: 16px;"
                        >
                        <button type="submit" class="btn btn-primary" style="width: 100%; justify-content: center;">
                            <i class="fas fa-paper-plane"></i> Subscribe
                        </button>
                    </form>

                    <p style="margin-top: 16px; font-size: 12px; color: var(--text-tertiary);">
                        No spam. Unsubscribe anytime.
                    </p>
                </div>

                <div style="margin-top: 48px;">
                    <h3 style="margin-bottom: 24px;">What You'll Get</h3>
                    <div style="display: flex; flex-direction: column; gap: 16px; text-align: left;">
                        <div style="display: flex; align-items: center; gap: 12px;">
                            <i class="fas fa-check-circle" style="color: var(--primary);"></i>
                            <span>Weekly AI and tech trends</span>
                        </div>
                        <div style="display: flex; align-items: center; gap: 12px;">
                            <i class="fas fa-check-circle" style="color: var(--primary);"></i>
                            <span>Exclusive templates and resources</span>
                        </div>
                        <div style="display: flex; align-items: center; gap: 12px;">
                            <i class="fas fa-check-circle" style="color: var(--primary);"></i>
                            <span>Early access to new services</span>
                        </div>
                        <div style="display: flex; align-items: center; gap: 12px;">
                            <i class="fas fa-check-circle" style="color: var(--primary);"></i>
                            <span>Case studies and success stories</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
