---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us">
    <!-- Contact Section -->
    <section class="contact-page">
        <div class="container">
            <div class="section-header scroll-reveal">
                <h1>Contact Us</h1>
                <p>Get in touch with our team</p>
            </div>

            <div class="contact-grid">
                <!-- Contact Info -->
                <div class="contact-info scroll-reveal">
                    <div class="contact-item">
                        <div class="contact-icon"><i class="fas fa-envelope"></i></div>
                        <div>
                            <h3>Email</h3>
                            <p><a href="mailto:info@fikanova.co.ke">info@fikanova.co.ke</a></p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon"><i class="fas fa-phone"></i></div>
                        <div>
                            <h3>Phone</h3>
                            <p><a href="tel:+254700000000">+254 700 000 000</a></p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon"><i class="fas fa-map-marker-alt"></i></div>
                        <div>
                            <h3>Location</h3>
                            <p>Nairobi, Kenya</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon"><i class="fas fa-clock"></i></div>
                        <div>
                            <h3>Business Hours</h3>
                            <p>Mon - Fri: 9am - 6pm EAT</p>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="contact-form-card scroll-reveal">
                    <h3>Send us a message</h3>
                    <form id="contactForm">
                        <div class="form-group">
                            <label class="form-label">Name</label>
                            <input type="text" id="name" class="form-input" placeholder="Your name" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input type="email" id="email" class="form-input" placeholder="you@example.com" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Subject</label>
                            <input type="text" id="subject" class="form-input" placeholder="How can we help?">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Message</label>
                            <textarea id="message" class="form-input" rows="5" placeholder="Tell us about your project..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 100%;">
                            <i class="fas fa-paper-plane"></i> Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <style>
        .contact-page {
            padding: 120px 24px 80px;
        }
        .contact-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 48px;
            max-width: 1000px;
            margin: 48px auto 0;
        }
        .contact-info {
            display: flex;
            flex-direction: column;
            gap: 24px;
        }
        .contact-item {
            display: flex;
            align-items: flex-start;
            gap: 16px;
            padding: 24px;
            background: var(--dark-card);
            border: 1px solid var(--border-subtle);
            border-radius: 16px;
        }
        .contact-icon {
            width: 48px;
            height: 48px;
            background: rgba(139, 92, 246, 0.15);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            font-size: 20px;
        }
        .contact-item h3 {
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 4px;
        }
        .contact-item p, .contact-item a {
            color: var(--text-secondary);
        }
        .contact-item a:hover {
            color: var(--primary);
        }
        .contact-form-card {
            background: var(--dark-card);
            border: 1px solid var(--border-subtle);
            border-radius: 24px;
            padding: 32px;
        }
        .contact-form-card h3 {
            margin-bottom: 24px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
        }
        .form-input {
            width: 100%;
            padding: 14px 16px;
            background: var(--dark-surface);
            border: 1px solid var(--border-subtle);
            border-radius: 12px;
            color: var(--text-primary);
            font-size: 16px;
        }
        .form-input:focus {
            outline: none;
            border-color: var(--primary);
        }
        textarea.form-input {
            resize: vertical;
        }
        @media (max-width: 768px) {
            .contact-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <script is:inline>
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const subject = document.getElementById('subject').value;
            const message = document.getElementById('message').value;
            
            // Open email client with pre-filled content
            const mailtoLink = `mailto:info@fikanova.co.ke?subject=${encodeURIComponent(subject || 'Website Inquiry')}&body=${encodeURIComponent(`Name: ${name}\nEmail: ${email}\n\n${message}`)}`;
            window.location.href = mailtoLink;
        });
    </script>
</Layout>
