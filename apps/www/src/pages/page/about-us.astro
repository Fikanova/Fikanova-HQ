---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="About Us">
    <div class="grid-background"></div>

    <header>
        <nav>
            <div class="logo">
                <a href="/"><img src="/assets/logos/fikanova-logo1.png" class="logo-image" /></a>
            </div>
            <div class="nav-desktop">
                <ul class="nav-menu">
                    <li id="nav-solutions-container" class="nav-item"></li>
                    <li id="nav-company-container" class="nav-item"></li>
                    <li id="nav-work-container" class="nav-item"></li>
                </ul>
            </div>
            <div class="nav-right">
                <button class="theme-toggle" id="themeToggle"><i class="fas fa-moon"></i></button>
                <a href="/contact" class="btn-call"><i class="fas fa-phone-alt"></i> Contact Us</a>
            </div>
        </nav>
    </header>

    <section class="hero">
        <div class="container">
            <div class="hero-badge"><span class="badge-dot"></span>Who We Are</div>
            <h1>About <span class="gradient-text">Fikanova</span></h1>
            <p>Bridging human creativity with artificial intelligence</p>
        </div>
    </section>

    <main class="page-main">
        <div class="container">
            <div class="scroll-reveal" style="max-width: 800px; margin: 0 auto;">
                <h2 style="margin-bottom: 24px;">Our Mission</h2>
                <p style="font-size: 18px; line-height: 1.8; color: var(--text-secondary); margin-bottom: 40px;">
                    Fikanova is a software development and digital marketing agency based in Nairobi, Kenya. 
                    We specialize in building AI-enhanced solutions that help businesses streamline operations, 
                    reach more customers, and scale effectively.
                </p>

                <h2 style="margin-bottom: 24px;">What We Do</h2>
                <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 24px; margin-bottom: 40px;">
                    <div class="service-card">
                        <i class="fas fa-code" style="font-size: 32px; color: var(--primary); margin-bottom: 16px;"></i>
                        <h4>Development</h4>
                        <p style="font-size: 14px;">Web, mobile, and custom software</p>
                    </div>
                    <div class="service-card">
                        <i class="fas fa-chart-line" style="font-size: 32px; color: var(--primary); margin-bottom: 16px;"></i>
                        <h4>Marketing</h4>
                        <p style="font-size: 14px;">SEO, social media, content</p>
                    </div>
                    <div class="service-card">
                        <i class="fas fa-robot" style="font-size: 32px; color: var(--primary); margin-bottom: 16px;"></i>
                        <h4>AI & Tech</h4>
                        <p style="font-size: 14px;">Chatbots, automation, consulting</p>
                    </div>
                </div>

                <h2 style="margin-bottom: 24px;">Our Values</h2>
                <ul style="list-style: none; padding: 0; display: flex; flex-direction: column; gap: 16px;">
                    <li style="display: flex; align-items: center; gap: 12px;">
                        <i class="fas fa-check-circle" style="color: var(--primary);"></i>
                        <strong>Innovation</strong> — We embrace new technologies to solve problems
                    </li>
                    <li style="display: flex; align-items: center; gap: 12px;">
                        <i class="fas fa-check-circle" style="color: var(--primary);"></i>
                        <strong>Quality</strong> — We deliver excellence in every project
                    </li>
                    <li style="display: flex; align-items: center; gap: 12px;">
                        <i class="fas fa-check-circle" style="color: var(--primary);"></i>
                        <strong>Partnership</strong> — We grow together with our clients
                    </li>
                </ul>
            </div>
        </div>
    </main>

    <footer>
        <div class="container">
            <div class="footer-bottom"><p>&copy; 2025 Fikanova Limited. All rights reserved.</p></div>
        </div>
    </footer>

    <script is:inline src="/assets/js/script.js"></script>
    <script is:inline src="/assets/js/dynamic-menu.js"></script>
</Layout>
