---
// No header/footer for register page
const sessionCookie = Astro.cookies.get('session');
if (sessionCookie?.value) {
    return Astro.redirect('/dashboard');
}

const roles = [
    { id: 'user', label: 'Client', description: 'View projects and invoices' },
    { id: 'subscriber', label: 'Subscriber', description: 'Newsletter and resources' },
    { id: 'learner', label: 'Learner', description: 'Access courses' }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | Fikanova Portal</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/appwrite@14.0.0"></script>
    <style>
        .register-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .register-card {
            background: var(--dark-card);
            border: 1px solid var(--border-subtle);
            border-radius: 24px;
            padding: 48px;
            width: 100%;
            max-width: 480px;
        }
        .register-logo {
            text-align: center;
            margin-bottom: 32px;
        }
        .register-logo img { height: 40px; }
        .register-title { text-align: center; margin-bottom: 8px; }
        .register-subtitle { text-align: center; color: var(--text-secondary); margin-bottom: 32px; }
        .form-group { margin-bottom: 20px; }
        .form-label { display: block; margin-bottom: 8px; font-weight: 500; }
        .form-input {
            width: 100%;
            padding: 14px 16px;
            background: var(--dark-surface);
            border: 1px solid var(--border-subtle);
            border-radius: 12px;
            color: var(--text-primary);
            font-size: 16px;
        }
        .form-input:focus { outline: none; border-color: var(--primary); }
        .oauth-btns { display: flex; gap: 12px; margin-bottom: 24px; }
        .oauth-btn {
            flex: 1;
            padding: 12px;
            background: var(--dark-surface);
            border: 1px solid var(--border-subtle);
            border-radius: 12px;
            color: var(--text-primary);
            font-weight: 500;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: border-color 0.2s;
        }
        .oauth-btn:hover { border-color: var(--primary); }
        .divider {
            display: flex;
            align-items: center;
            gap: 16px;
            margin-bottom: 24px;
            color: var(--text-tertiary);
        }
        .divider::before, .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: var(--border-subtle);
        }
        .role-options { display: flex; flex-direction: column; gap: 12px; }
        .role-option {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            padding: 16px;
            background: var(--dark-surface);
            border: 1px solid var(--border-subtle);
            border-radius: 12px;
            cursor: pointer;
            transition: border-color 0.2s;
        }
        .role-option:hover { border-color: var(--primary); }
        .role-option input { margin-top: 4px; }
        .role-label { font-weight: 500; }
        .role-desc { font-size: 12px; color: var(--text-secondary); }
        .btn-register {
            width: 100%;
            padding: 16px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 24px;
        }
        .btn-register:hover { background: var(--primary-dark); }
        .error-msg, .success-msg {
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 16px;
            display: none;
        }
        .error-msg { background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.3); color: #ef4444; }
        .success-msg { background: rgba(34, 197, 94, 0.1); border: 1px solid rgba(34, 197, 94, 0.3); color: #22c55e; }
        .login-link { text-align: center; margin-top: 24px; color: var(--text-secondary); }
        .login-link a { color: var(--primary); }
        .approval-note { text-align: center; margin-top: 16px; font-size: 12px; color: var(--text-tertiary); }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <div class="register-logo">
                <img src="/assets/logos/fikanova-logo1.png" alt="Fikanova">
            </div>
            <h1 class="register-title">Create Account</h1>
            <p class="register-subtitle">Join Fikanova to access your dashboard</p>

            <div class="oauth-btns">
                <button id="googleBtn" class="oauth-btn">
                    <i class="fab fa-google"></i> Google
                </button>
                <button id="githubBtn" class="oauth-btn">
                    <i class="fab fa-github"></i> GitHub
                </button>
            </div>

            <div class="divider">or register with email</div>

            <form id="registerForm">
                <div id="errorMessage" class="error-msg"></div>
                <div id="successMessage" class="success-msg"></div>
                
                <div class="form-group">
                    <label class="form-label">Full Name</label>
                    <input type="text" id="name" class="form-input" placeholder="John Doe" required>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input type="email" id="email" class="form-input" placeholder="you@example.com" required>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Password</label>
                    <input type="password" id="password" class="form-input" placeholder="••••••••" minlength="8" required>
                </div>

                <div class="form-group">
                    <label class="form-label">Account Type</label>
                    <div class="role-options">
                        {roles.map((role, i) => (
                            <label class="role-option">
                                <input type="radio" name="role" value={role.id} checked={i === 0}>
                                <div>
                                    <div class="role-label">{role.label}</div>
                                    <div class="role-desc">{role.description}</div>
                                </div>
                            </label>
                        ))}
                    </div>
                </div>

                <button type="submit" class="btn-register">
                    <i class="fas fa-user-plus"></i> Create Account
                </button>
            </form>

            <p class="login-link">
                Already have an account? <a href="/">Sign in</a>
            </p>
            <p class="approval-note">
                <i class="fas fa-info-circle"></i> New accounts require admin approval
            </p>
        </div>
    </div>

    <script is:inline>
        const { Client, Account, ID } = Appwrite;
        
        const client = new Client()
            .setEndpoint('https://fra.cloud.appwrite.io/v1')
            .setProject('6936df5800371a655e8e');
        
        const account = new Account(client);
        const errorDiv = document.getElementById('errorMessage');
        const successDiv = document.getElementById('successMessage');

        document.getElementById('googleBtn').addEventListener('click', () => {
            account.createOAuth2Session('google', window.location.origin + '/dashboard', window.location.origin + '/register');
        });

        document.getElementById('githubBtn').addEventListener('click', () => {
            account.createOAuth2Session('github', window.location.origin + '/dashboard', window.location.origin + '/register');
        });

        document.getElementById('registerForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            errorDiv.style.display = 'none';
            successDiv.style.display = 'none';
            
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const role = document.querySelector('input[name="role"]:checked').value;
            
            try {
                await account.create(ID.unique(), email, password, name);
                await account.createEmailPasswordSession(email, password);
                await account.updatePrefs({ requestedRole: role, roleApproved: false });
                successDiv.textContent = 'Account created! Redirecting...';
                successDiv.style.display = 'block';
                setTimeout(() => {
                    document.cookie = 'session=active; path=/; max-age=86400';
                    window.location.href = '/dashboard';
                }, 1500);
            } catch (error) {
                errorDiv.textContent = error.message || 'Registration failed.';
                errorDiv.style.display = 'block';
            }
        });
    </script>
</body>
</html>
